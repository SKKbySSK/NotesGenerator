<Application x:Class="NotesPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NotesPlayer"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="LaneBorderBrush" Color="Black"/>
        <SolidColorBrush x:Key="LaneFillBrush" Color="#AA000000"/>
        <SolidColorBrush x:Key="LanePressedFillBrush" Color="#CC000000"/>
        <SolidColorBrush x:Key="TextBrush" Color="White"/>
        <SolidColorBrush x:Key="RankViewBrush" Color="Black"/>
        <SolidColorBrush x:Key="DifficultyBrush" Color="Black"/>
        <system:Double x:Key="LaneStrokeThickness">2</system:Double>

        <SolidColorBrush x:Key="NoteFillBrush" Color="#e2e2e2"/>
        <system:Double x:Key="NoteHeight">30</system:Double>
        <SolidColorBrush x:Key="NoteStrokeBrush" Color="Gray"/>
        <system:Double x:Key="NoteStroke">1</system:Double>
    </Application.Resources>
</Application>
